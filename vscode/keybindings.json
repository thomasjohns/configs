[
    // Keybindings emulating neovim init.vim Ctrl+ mappings.
    // Only Ctrl+ bindings live here. All other vim-mode bindings (g-prefixed,
    // leader, shift, etc.) are in settings.json under vim.normalModeKeyBindingsNonRecursive
    // so they don't break native vim motions like gg, gf, etc.

    // --- File Finding ---
    // Ctrl+g -> find all files (fzf :Files)
    {
        "key": "ctrl+g",
        "command": "workbench.action.quickOpen",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    // Ctrl+p -> find git files (fzf :GFiles, same command in VS Code)
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },

    // --- File Explorer / Sidebar ---
    // Ctrl+y -> toggle sidebar (NERDTreeToggle)
    {
        "key": "ctrl+y",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    // Ctrl+f -> reveal active file in explorer (CocCommand explorer)
    {
        "key": "ctrl+f",
        "command": "workbench.files.action.showActiveFileInExplorer",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    }
]
